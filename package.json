{
  "name": "preact-aria-widgets",
  "type": "module",
  "version": "0.0.1",
  "description": "A small set of Preact hooks related to creating ARIA-compliant widgets",
  "source": "src/index.tsx",
  "module": "index.js",
  "types": "index.d.ts",
  "packageManager": "pnpm@7.27.1",
  "scripts": {
    "build": "npx npm-run-all --npm-path npm -pc build:*",
    "watch": "npx npm-run-all --npm-path npm -pc watch:*",
    "watch:ts": "tsc --watch",
    "build:ts": "tsc",
    "test": "jest",
    "lint": "npx lint ./src",
