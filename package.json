    "clean": "tsc --build --clean"
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "preact": "^10.11.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "preact-prop-helpers": "github:mwszekely/preact-prop-helpers"
  },
  "main": "index.js",
  "directories": {
    "test": "tests"
  }
